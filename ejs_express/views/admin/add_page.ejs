<%- include('../partials/admin_header'); %>
		
		<%messages.forEach(function(message) {%>

			<div class="alert alert-warning alert-dismissible fade show" role="alert">
			  <strong><%= message %></strong> 
			  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
			    <span aria-hidden="true">&times;</span>
			  </button>
			</div>

		<%})%>		
		

	
		<h3 class="page-title">Add page</h3>
		<a href="/admin/pages" class="btn btn-primary"> back to all pages</a>

		<form action="/admin/addPage" method="post" style="margin: 20px"> 
			  <div class="form-group">
			    <label for="title">Enter page title</label>
			    <input type="text" name="title" class="form-control"  aria-describedby="pageTitle" placeholder="Enter title.." value="<%=title %>">
			    <small  class="form-text text-muted">enter page title</small>
			  </div>

			  <div class="form-group">
			    <label for="slug">Enter page slug</label>
			    <input type="Number" name="slug" class="form-control"  aria-describedby="slug" placeholder="Enter slug.." value="<%=slug %>">
			    <small  class="form-text text-muted">enter page slug</small>
			  </div>

			  <div class="form-group">
			    <label for="title">Enter page content</label>
			   <textarea name="content" id="dd" class="form-control" id="editor" cols="30" rows="10" placeholder="add content ..."><%=content %></textarea>
			    <small  class="form-text text-muted">enter page content</small>
			  </div>
			  
			 
			  <button type="submit" class="btn btn-primary">Submit</button>
		</form>

				 <script>
                        CKEDITOR.replace( 'editor' );
                </script>




