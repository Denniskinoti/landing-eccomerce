	<%- include('../partials/admin_header'); %>

	<% if(message != "") {%>
		<div class="alert alert-warning alert-dismissible fade show" role="alert">
					  <strong><%= message %></strong> 
					  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
					    <span aria-hidden="true">&times;</span>
					  </button>
		</div>
	<%}%>


  <div class="container" style="margin: 5px">
  <a  href="/products/newProduct" class="btn btn-primary"> Add New Product</a>  
</div>


    <%if(product == "") {%>
          <div class="container" style="background-color: green;color:red">
            <marquee> <span style="font-size: 30px">No Products Exist</span></marquee>
          </div>
      <%}else {%>
        <table class="table table-dark">
  <thead>
    <tr class="home">
      <th scope="col">#</th>
      <th scope="col">product</th> 
      <th scope="col">price</th> 
      <th scope="col">category</th> 
      <th scope="col">product image</th> 
      <th scope="col">edit</th>
      <th scope="col">Delete</th>
    </tr>
  </thead>
  <tbody>


    <%product.forEach(function(product) {%>
    <tr>
      <th scope="row">1</th>
      <td><%= product.title %></td>
      <td>$<%= parseFloat(product.price).toFixed(2) %></td>    
      <td><%= product.category %></td>  
      <td>
          <% if(product.image == "") {%>
            <img  id="imag" src="/images/noImage.png">
          <%} else {%>
            <img id="imag" src="/productImage/<%=product._id%>/<%=product.image%>" >
          <%}%>

      </td>      
     
      <td><a href="/products/edit/<%= product.id%>" class="btn-btn-success">edit</td>
      <td><a href="/products/remove/<%= product.id%>" class="btn-btn-danger confirmDelete">Delete</td>     
    </tr>
      <%})%>
  </tbody>
</table>

      <%}%>




 <script src="https://code.jquery.com/jquery-1.12.4.js"></script>




<%- include('../partials/admin_footer'); %>



